{
    "files.autoSave": "afterDelay",
    "liveServer.settings.donotShowInfoMsg": true,
    "workbench.colorCustomizations": {},
    "liveServer.settings.donotVerifyTags": true,
    "git.autofetch": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.semanticHighlighting.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.allowMnemonics": true,
    "editor.rulers": [80],
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    // use yapf formatting with two spaces
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": ["--style={based_on_style: google, indent_width: 2}"],
    
    // use prettier for JS formatting
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Community Material Theme Darker High Contrast",
    "editor.tokenColorCustomizations": {
        "[Community Material Theme Darker High Contrast]": {
            "comments": "#9fbdaa",              // set comments to this color
            "textMateRules": [
                {
                    "scope": "string.quoted.docstring",
                    "settings": {
                        "foreground": "#7d8dad"  // set docstrings to this color
                    }
                }
            ],
            
        }
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",    
}
